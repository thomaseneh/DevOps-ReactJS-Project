{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "no-unused-vars": "error",
        "space-before-function-paren": ["error", "always"],
        "max-len": ["error", { "code": 80 }],
        "no-console": "warn",
        "consistent-return": "error",
        "no-extra-semi": "error",
        "no-empty": "error",
        "semi": ["error", "always"]
    }
}
